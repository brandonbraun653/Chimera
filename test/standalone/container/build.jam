
local path-constant build_directory = $(COVERAGE_BUILD_DIR)/buffer ;

exe ContainerTests
  : test_container.cpp
  :
    <use>/CHIMERA//PUB
    <use>/FREERTOS//PUB
    <use>/GTEST//TEST_PUB

    <use>/PRJ//BOOST
    <use>/PRJ//CHIMERA_PORT
    <use>/PRJ//CHIMERA_DEFS
    <use>/PRJ//FREERTOS_CFG

    <library>/CHIMERA//CORE
    <library>/CHIMERA/TEST/STANDALONE//CORE
    <library>/GTEST//gtest

    <location>$(build_directory)
  ;
explicit ContainerTests ;

alias TEST
  : ContainerTests
  : <Chimera>enabled
    <Chimera-backend>Sim
    <FreeRTOS>enabled
    <FreeRTOS-port>Windows
    <FreeRTOS-heap>heap4
  ;
explicit TEST ;